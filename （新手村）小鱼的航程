/*下面的if语句使用了一个简单的数学原理:
  "2个集合内所有数相加相乘结果一样，2个集合的内容一样"
*/


#include <stdio.h>
int main()
{
    int a=123;
    int b,c;
    for(a=123;a<=321;a++)
    {
        b=2*a;
        c=3*a;
        if(a/100+(a%100)/10+a%100%10+b/100+(b%100)/10+b%100%10+c/100+(c%100)/10+c%100%10==1+2+3+4+5+6+7+8+9&&(a/100)*((a%100)/10)*(a%100%10)*(b/100)*((b%100)/10)*(b%100%10)*(c/100)*((c%100)/10)*(c%100%10)==1*2*3*4*5*6*7*8*9)
        {
            printf("%d %d %d\n",a,b,c);
        }
    }
    return 0;
}
